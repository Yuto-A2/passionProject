@model PassionProject.Models.ViewModels.UpdateDiary
    @{
        ViewBag.Title = "Edit";
    }

    <h2>Update Diary</h2>
    <form action="/Diary/Update/@Model.SelectedContent.content_Id" method="POST">

        <div>
            <label>Title:</label> <input type="text" name="title" value="@Model.SelectedContent.title"/>
        </div>

        <div>
            <label>Content: </label> <input type="text" name="diary_body" value="@Model.SelectedContent.diary_body"/>
        </div>
    </form>
